<% include ../partials/header %>
<div class="container-fluid">
    <br>
    <div class="panel-heading form-control-sm">
        <h4 class="panel-title">Users Data</h4>
    </div>
    <hr>
    <div class="panel-body form-control-sm">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Position</th>
                        <th scope="col">Type</th>
                        <th scope="col" style="text-align: center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach((item) => { %>
                    <tr>
                        <td>
                            <%= item.userid %>
                        </td>
                        <td>
                            <%= `${item.firstname} ${item.lastname}`  %>
                        </td>
                        <td>
                            <%= item.email %>
                        </td>
                        <td>
                            <%= item.position %>
                        </td>
                        <td>
                            <%= item.type %>
                        </td>
                        <td style="text-align: center">
                            <a href="/users/edit/<%= item.userid %>" class="btn btn-success">Edit</a>
                            <a href="/users/delete/<%= item.userid %>" class="btn btn-danger"
                                onclick="return confirm('Anda yakin?');">Delete</a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <a href="/users/add" class="btn btn-primary">Add</a>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>