<% include ../partials/header %>
<div class="container-fluid">
    <br>
    <div class="panel-heading form-control-sm">
        <h4 class="panel-title">Edit Project</h4>
    </div>
    <hr>
    <form action="" method="post">
        <div class="panel-body form-control-sm">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">ID</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control form-control-sm" id="name" placeholder="Project ID"
                        name="name" value="<%= project.projectid %>" readonly>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control form-control-sm" id="name" placeholder="Project Name"
                        name="name" value="<%= project.name %>">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Members</label>
                <div class="col-sm-5">
                    <% users.forEach((item) => { %>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="member"
                            value="<%= `${item.userid}#${item.position}` %>" <%= members.includes(item.userid) ? ' checked' : '' %>>
                        <label class="form-check-label"
                            for="defaultCheck"><%= `${item.firstname} ${item.lastname}` %></label>
                    </div>
                    <% }) %>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a href="/projects" class="btn btn-warning">Cancel</a>
                </div>
            </div>
        </div>
    </form>
</div>
<% include ../partials/footer %>